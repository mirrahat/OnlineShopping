
@{
    ViewBag.Title = "GetUserProductsbyOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card mn  b-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        
        <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Add New Product</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr.  No.</th>
                        <th>Product Id</th>
                        <th>CategoryId</th>
                        <th>Sub Category</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Quanity</th>
                        <th>Product Image</th>
                        <th>Color</th>
                        <th>Discount</th>
                        <th>Tag</th>
                        <th>Size</th>
                        <th>Brand Name</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>

                        <th>Sr.  No.</th>
                        <th>Product Id</th>
                        <th>CategoryId</th>
                        <th>Sub Category</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Quanity</th>
                        <th>Image</th>
                        <th>Color</th>
                        <th>Discount</th>
                        <th>Tag</th>
                        <th>Size</th>
                        <th>Brand Name</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int i = 0;
                        int count = 1;
                    }
                    @foreach (var item in ViewBag.products)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Products.Rows[i][0]</td>
                            <td>@item.Products.Rows[i][1]</td>
                            <td>@item.Products.Rows[i][2]</td>
                            <td>@item.Products.Rows[i][3]</td>
                            <td>@item.Products.Rows[i][6]</td>
                            <td>@item.Quantity</td>
                            <td>
                                <div class="pimg" style="height:200px;width:200px;">
                                    <img src="~/ProductImg/@item.Products.Rows[i][8]" width="200" height="200" />
                                </div>
                            </td>
                            <td>@item.Products.Rows[i][10]</td>
                            <td>@item.Products.Rows[i][11]</td>
                            <td>@item.Products.Rows[i][12]</td>
                            <td>@item.Products.Rows[i][13]</td>
                            <td>@item.Products.Rows[i][14]</td>

                        </tr>

                        i++;
                    }




                </tbody>
            </table>
        </div>
    </div>
</div>
