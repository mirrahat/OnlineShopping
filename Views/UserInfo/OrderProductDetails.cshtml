
@{
    ViewBag.Title = "OrderProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int count = 0;
}
<div class="card mn  b-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
       
    </div>
    <div class="container">
        <div class="row">
            <div class="userorder" style="padding-left:20%; padding-right:10%;"><h3>Products</h3></div>
        </div>
    </div>
    
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr.  No.</th>
                        <th>Sub Category</th>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Quanity</th>
                        <th>Product Image</th>
                        <th>Color</th>
                        <th>Discount</th>
                        <th>Tag</th>
                        <th>Size</th>
                        <th>Brand Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var item in ViewBag.products)
                    {
                        count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Products.Rows[i][2]</td>
                        <td>@item.Products.Rows[i][3]</td>
                        <td>@item.Products.Rows[i][6]</td>
                        <td>@item.Quantity</td>

                        <td>
                            <div class="pimg" style="height:200px;width:200px;">
                                <img src="~/ProductImg/@item.Products.Rows[i][8]" width="200" height="200" />
                            </div>
                        </td>
                        <td>@item.Products.Rows[i][10]</td>

                        <td>@item.Products.Rows[i][11]</td>
                        <td>@item.Products.Rows[i][12]</td>
                        <td>@item.Products.Rows[i][13]</td>
                        <td>@item.Products.Rows[i][14]</td>

                    </tr>

                        i++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
