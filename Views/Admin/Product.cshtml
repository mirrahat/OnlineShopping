@model IEnumerable<OnlineShoppingStore.Database.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_adminLayoutPage.cshtml";
}

<h2>Product</h2>
<div class="card mn  b-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Product Details
        <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Add New Product</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr.  No.</th>
                        <th>Product Name</th>
                        <th>Product Id</th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr.  No.</th>
                        <th>Product Name</th>
                        <th>Product Id</th>
                        <th>Action </th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        int count = 1;
                        <tr>
                            <td>@count</td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductId</td>
                            <td>
                            
                                @Html.ActionLink("Edit","ProductEdit",new {productId=item.ProductId });
                            
                            </td>

                        </tr>

                    }



                </tbody>
            </table>
        </div>
    </div>
</div>