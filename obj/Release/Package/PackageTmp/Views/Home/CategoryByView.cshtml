
@{
    ViewBag.Title = "CategoryByView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">New Collections</h2>
                </div>
            </div>
            @if (Model != null)
            {

                for (int i = 0; i < Model.Rows.Count; i++)
                {

                    <div class="col-md-3 col-sm-6 col-xs-6">

                        <div class="product product-single">
                            <div class="product-thumb">
                                <div class="product-label">
                                    <span>@Model.Rows[i][12]</span>
                                    <span class="sale">-@Model.Rows[i][11]</span>
                                </div>

                                <button class="main-btn quick-view" onclick="location.href='@Url.Action("ViewDetailsProduct", "ProductViewPage")?id='+@(Model.Rows[i][0]) "><i class="fa fa-search-plus"></i> Quick view</button>
                                <img src="~/ProductImg/@Model.Rows[i][8]" alt="">
                            </div>
                            <div class="product-body">
                                <h3 class="product-price">$@Model.Rows[i][6]<del class="product-old-price">$@Model.Rows[i][7]</del></h3>

                                <h2 class="product-name"><a href="#">@Model.Rows[i][3]</a></h2>
                                <div class="product-btns">
                                    <button class="main-btn icon-btn" onclick="location.href='@Url.Action("MyWishlist", "MyFeatures")?id='+@(Model.Rows[i][0])"><i class="fa fa-heart"></i></button>
                                    <button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
                                    @*<a class="btn  primary-btn add-to-cart" href="/Home/AddtoCart?id=@(Model.ProductTable.Rows[i][0])"><i class="fa fa-shopping-cart"></i> Add to Cart</a>
                                    *@
                                    <button class="main-btn" onclick="location.href='@Url.Action("AddtoCart", "Home")?id='+@(Model.Rows[i][0]) ">Add To Cart</button>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h3>No Product Exists in This Category</h3>

            }

        </div>
    </div>
</div>